{
  "resolution": {
    "main": "./typings/"
  },
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "allowJs": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["node_modules/@types", "src/**/*.tsx", "src/**/*.ts", "stories/index.tsx"],
  "exclude": ["build", "node_modules", "src/**/*.unit.tsx"]
}
